<div id="edit_text">
  <h1>Edit</h1>
  <%= form_for @user do |f|%>

  <table>
    <tr>
      <td><%= f.label :profile_pic %></td>
      <td><%= f.file_field :avatar %></td>
    </tr>
    <tr>
      <td><%= f.label :profile_name %></td>
      <td><%= f.text_field :alias %></td>
    </tr>
    <tr>
      <td><%= f.label :first_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td><%= f.label :last_name %></td>
      <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label :confirm_password %></td>
      <td><%= f.password_field :confirm_password %></td>
    </tr>
    <tr>
      <td></td>
      <td id="edit_button-personal"><%= f.submit "Confirm Changes"%></td>
      <% end %>
    </tr>
    <tr>
      <td></td>
      <td id="delete_button-personal">  <%= button_to "Delete user", @user, :method => :delete %></td>
    </tr>
  </table>





</div>
