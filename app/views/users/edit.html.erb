<h1>Edit</h1>
<%= form_for @user do |f|%>

<p>
  <%= f.label :password %>
  <%= f.password_field :password %>
</p>

<p>
  <%= f.label :confirm_password %>
  <%= f.password_field :confirm_password %>
  <%= f.submit "Edit password"%>
</p>
<% end %>

<%= button_to "Delete user", @user, :method => :delete %>