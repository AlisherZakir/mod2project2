<h1>Leaderboard stats:</h1>
<div class="leaderboard-cards-wrapper">
  <div class="leaderboard_card">
    <div class="lc-c">
      <h2><b>Top 5 winners:</b></h2>
          <% @top_5_players.each do |user| %>
          <p><%= link_to user.username, user_path(user) %></p>
          <p><%= user.wins.count %></p><br>
      <% end%>
      </div>
  </div>
  <div class="leaderboard_card">
    <div class="lc-c">
      <h2><b>Top 5 loosers:</b></h2>
          <% @top_5_loosers.each do |user| %>
          <p><%= link_to user.username, user_path(user) %></p>
          <p><%= user.loses.count %></p><br>
      <% end%>
    </div>
  </div>
  <div class="leaderboard_card">
    <div class="lc-c">
      <h2><b>Best ratio:</b></h2>
          <% @best_ratio_players.each do |user| %>
          <p><%= link_to user.username, user_path(user) %></p>
          <p><%= user.ratio ? "#{(user.ratio * 100).round}%" : "N/A" %></p><br>
      <% end%>
    </div>
  </div>
</div>
