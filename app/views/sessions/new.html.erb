
<div id="login_card">
  <div id="login_text">
    <h1 id="login-title"></h1>
    <div class="b-slide"></div>
    <%= form_for @user, url: login_path do |f|%>
    <table>
      <tr>
        <td><%= f.label :username %></td>
        <td><%= f.text_field :username %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td></td>
        <td id="login_button"><%= f.submit "Log In"%></td>
      </tr>
    </table>



    <% end %>
  </div>
</div>
